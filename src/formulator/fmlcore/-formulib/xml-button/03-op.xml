

<!--                                                                        -->
<!-- TOOLBAR: Operator symbols                                              -->
<!--                                                                        -->
<toolbar id="@t@Operator@"
         group="Presentation"
         name="Operator symbols" 
         caption="Operator"
         image="images/buttons/operator.bmp" 
         image-title="images/title/t_operator_n.bmp" 
         image-title-hot="images/title/t_operator_h.bmp" >


  <!-- Plus-minus sign                                                      -->
  <!--~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~-->
  <button name="Plus-minus sign (Ctrl+Shift+K,=)"
          type="text" value="&amp;#x00B1;" style="mathextra" id="@plusminus"
  >
    <hot-keys>
      <hot-key>
        <sequence ctrl="yes" shift="yes" key="K" />
        <sequence                        key="=" />
      </hot-key>
    </hot-keys>
    <mathml value="&PlusMinus;" type="mo" />
    <dsr head="@plusminus" tail=" " param="$empty$" />
  </button>


  <!-- Multiplication sign                                                  -->
  <!--~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~-->
  <button name="Multiplication sign (Ctrl+K,T)"
          type="text" value="&amp;#x00D7;" style="mathextra" id="@times"
  >
    <hot-keys>
      <hot-key>
        <sequence ctrl ="yes" key="K" />
        <sequence             key="T" />
      </hot-key>
    </hot-keys>
    <mathml value="&times;" type="mo" />
    <dsr head="@times" tail=" " param="$empty$" />
  </button>


  <!-- Asterik operator                                                     -->
  <!--~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~-->
  <button name="Asterik operator (Ctrl+Shift+K,*)"
          type="text" value="&amp;#x2217;" style="mathextra" id="*"
  >
    <hot-keys>
      <hot-key>
        <sequence ctrl="yes" shift="yes" key="K" />
        <sequence                        key="*" />
      </hot-key>
    </hot-keys>
    <mathml value="&lowast;" type="mo" />
    <dsr head="*" param="$empty$" />
  </button>


  <!-- Division sign                                                        -->
  <!--~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~-->
  <button name="Division sign (Ctrl+Shift+K,/)"
          type="text" value="&amp;#x00F7;" style="mathextra" id="@divide"
  >
    <hot-keys>
      <hot-key>
        <sequence ctrl="yes" shift="yes" key="K" />
        <sequence                        key="/" />
      </hot-key>
    </hot-keys>
    <mathml value="&divide;" type="mo" />
    <dsr head="/" param="$empty$" />
  </button>


  <!-- Circled plus                                                         -->
  <!--~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~-->
  <button name="Circled plus"
          type="text" value="&amp;#x2295;" style="mathextra" id="@circle_plus"
  >
    <mathml value="&CirclePlus;" type="mo" />
    <dsr head="@circle_plus" tail=" " param="$empty$" />
  </button>


  <!-- Circled times                                                        -->
  <!--~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~-->
  <button name="Circled times"
          type="text" value="&amp;#x2297;" style="mathextra" id="@circle_times"
  >
    <mathml value="&CircleTimes;" type="mo" />
    <dsr head="@circle_times" tail=" " param="$empty$" />
  </button>


  <!-- Addition sign                                                        -->
  <!--~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~-->
  <button name="Addition sign"
          type="text" value="+" style="mathextra" id="@plus"
  >
    <mathml value="&plus;" type="mo" />
    <dsr head="+" param="$empty$" />
  </button>


  <!-- Substraction sign                                                    -->
  <!--~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~-->
  <button name="Substraction sign"
          type="text" value="&amp;#x2212;" style="mathextra" id="@minus"
  >
    <mathml value="&minus;" type="mo" />
    <dsr head="-" param="$empty$" />
  </button>


  <!-- Dot operator                                                         -->
  <!--~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~-->
  <button name="Dot operator (Ctrl+Shift+K,.)"
          type="text" value="&amp;#x22C5;" style="mathextra" id="@center_dot"
  >
    <hot-keys>
      <hot-key>
        <sequence ctrl="yes" shift="yes" key="K" />
        <sequence                        key="." />
      </hot-key>
    </hot-keys>
    <mathml value="&sdot;" type="mo" />
    <dsr head="@center_dot" tail=" " param="$empty$" />
  </button>


  <!-- Bullet                                                               -->
  <!--~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~-->
  <button name="Bullet (Ctrl+Shift+K,8)"
          type="text" value="&amp;#x2219;" style="mathextra" id="@bullet"
  >
    <hot-keys>
      <hot-key>
        <sequence ctrl="yes" shift="yes" key="K" />
        <sequence                        key="8" />
      </hot-key>
    </hot-keys>
    <mathml value="&bull;" type="mo" />
    <dsr head="@bullet" tail=" " param="$empty$" />
  </button>


  <!-- Left-pointing angle bracket                                          -->
  <!--~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~-->
  <button name="Left-pointing angle bracket (Ctrl+Shift+K,<)"
          type="text" value="&amp;#x2329;" style="mathextra" id="@lang"
  >
    <hot-keys>
      <hot-key>
        <sequence ctrl="yes" shift="yes" key="K" />
        <sequence            shift="yes" key="<" />
      </hot-key>
    </hot-keys>
    <mathml value="&lang;" type="mo" />
    <dsr head="@lang" tail=" " param="$empty$" />
  </button>


  <!-- Right-pointing angle bracket                                         -->
  <!--~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~-->
  <button name="Right-pointing angle bracket (Ctrl+Shift+K,>)"
          type="text" value="&amp;#x232A;" style="mathextra" id="@rang"
  >
    <hot-keys>
      <hot-key>
        <sequence ctrl="yes" shift="yes" key="K" />
        <sequence            shift="yes" key=">" />
      </hot-key>
    </hot-keys>
    <mathml value="&rang;" type="mo" />
    <dsr head="@rang" tail=" " param="$empty$" />
  </button>


</toolbar>
