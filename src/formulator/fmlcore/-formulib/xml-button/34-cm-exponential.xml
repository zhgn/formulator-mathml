

<!--                                                                        -->
<!-- TOOLBAR: Content MathML: exponential functions templates               -->
<!--                                                                        -->
<toolbar id="@t@Exponential@"
         group="Content"
         name="Common exponential functions"
         caption="Exponential" 
         image="images/buttons/cm_exponential.bmp"
         image-title="images/title/t_cm_exponential_n.bmp"
         image-title-hot="images/title/t_cm_exponential_h.bmp"
         columns="3" >

  <!-- exp                                                                  -->
  <!--~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~-->
  <button name="The exponential function" id="@exp" type="mathml"
          vertical-center-type="frame" vertical-center-value="1" >
    <math display='block'>
      <exp/>
    </math>
  </button>

  <!-- ln                                                                   -->
  <!--~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~-->
  <button name="The natural logarithm function" id="@ln" type="mathml"
          vertical-center-type="frame" vertical-center-value="1" >
    <math display='block'>
      <ln/>
    </math>
  </button>

  <!-- log                                                                  -->
  <!--~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~-->
  <button name="The operator that returns a logarithm to a base of 10" id="@log" type="mathml"
          vertical-center-type="frame" vertical-center-value="1" >
    <math display='block'>
      <log/>
    </math>
  </button>

  <!-- exp                                                                  -->
  <!--~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~-->
  <button name="the exponential function " id="@exp_apply" type="mathml"
          vertical-center-type="frame" vertical-center-value="1" >
    <math display='block'>
        <apply>
          <exp/>
          <mrow __flag="0x20000000"></mrow>
        </apply>
    </math>
  </button>

  <!-- ln                                                                   -->
  <!--~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~-->
  <button name="The natural logarithm function" id="@ln_apply" type="mathml"
          vertical-center-type="frame" vertical-center-value="1" >
    <math display='block'>
        <apply>
          <ln/>
          <mrow __flag="0x20000000"></mrow>
        </apply>
    </math>
  </button>

  <!-- log                                                                  -->
  <!--~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~-->
  <button name="The operator that returns a logarithm to a given base" id="@log_apply" type="mathml"
          vertical-center-type="frame" vertical-center-value="2" 
          encoding="MathML-Content" >
    <math display='block'>
        <apply>
          <log/>
          <logbase>
            <cn></cn>
          </logbase>
          <mrow __flag="0x20000000"></mrow>
        </apply>
    </math>
  </button>

</toolbar>
